rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read access for news articles
    // Allow anyone to read, only authenticated users can write
    match /news/{document} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // Public read access for articles
    // Allow anyone to read, only authenticated users can write
    match /articles/{document} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // Public read access for social media posts
    // Allow anyone to read, only authenticated users can write
    match /posts/{document} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // Public read access for game updates
    // Allow anyone to read, only authenticated users can write
    match /gameUpdates/{document} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // Public read access for social media settings
    // Allow anyone to read, only authenticated users can write
    match /socialSettings/{document} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // Public read access for message banner settings
    // Allow anyone to read, only authenticated users can write
    match /messageBanner/{document} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // User-specific data - only accessible by the correct user
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles - readable by anyone, writable only by the user
    match /profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User settings - private to each user
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Comments on articles/news - readable by all, writable by authenticated users
    match /comments/{document} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Site administration - only for specific admin users
    match /admin/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Analytics and logs - write-only for the app, read for admins
    match /analytics/{document} {
      allow create: if true;
      allow read: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Contact form submissions - create only
    match /contactSubmissions/{document} {
      allow create: if true;
      allow read: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Deny all other operations by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}